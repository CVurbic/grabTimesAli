{
    "manifest_version": 3,
    "name": "Ali'sTimer",
    "version": "1.0",
    "permissions": [
        "activeTab",
        "tabs",
        "storage",
        "alarms"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "icons": {
        "128": "./images/AlisTimerLogo128x128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "./images/AlisTimerLogo16x16.png",
            "32": "./images/AlisTimerLogo32x32.png"
        }
    }
}